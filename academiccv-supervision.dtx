  \group_begin:
  \keys_set:nn {supervision} {#1}
  
  \iftrueTF{supervision}{swap}{
    \cvitem[
      swap = true,
      margin-size = \l_supervision_margin_skip,
      space = \l_supervision_space_skip,
      vspace-after = \l_supervision_vspaceAfter_skip,
    ]{\marginForSupervision}{\mainForSupervision}
  }{
    \cvitem[
      swap = false,
      margin-size = \l_supervision_margin_skip,
      space = \l_supervision_space_skip,
      vspace-after = \l_supervision_vspaceAfter_skip,
    ]{\marginForSupervision}{\mainForSupervision}
  }
  \group_end:
}
